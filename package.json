{
  "name": "github-archive",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc --noEmit && ncc build src/start.ts -o build -m",
    "dev": "tsx --watch src/start.ts",
    "start": "tsx src/start.ts",
    "check": "biome check",
    "check:fix": "biome check --write --unsafe --no-errors-on-unmatched",
    "dependency-update": "npm-check-updates -u --filterVersion \"/^[~^<>]| - |\\.x$/\" --deep && pnpm install",
    "generate-schema": "tsx scripts/generate-jobs-schema.ts",
    "test": "vitest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "nock": "14.0.0-beta.5",
    "node-cron": "^4.2.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.8.0",
    "zod": "^4.0.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^22",
    "@types/node-cron": "^3.0.11",
    "@vercel/ncc": "^0.38.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "npm-check-updates": "^18.0.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0",
    "zod-to-json-schema": "^3.24.6",
    "zx": "^8.7.2"
  }
}
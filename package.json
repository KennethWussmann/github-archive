{
  "name": "github-archive",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc --noEmit && ncc build src/start.ts -o build -m",
    "dev": "tsx --watch src/start.ts",
    "start": "tsx src/start.ts",
    "check": "biome check",
    "check:fix": "biome check --write --unsafe --no-errors-on-unmatched",
    "dependency-update": "npm-check-updates -u --filterVersion \"/^[~^<>]| - |\\.x$/\" --deep && pnpm install",
    "generate-schema": "tsx scripts/generate-jobs-schema.ts",
    "test": "vitest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "nock": "14.0.0-beta.5",
    "node-cron": "^3.0.3",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^22",
    "@types/node-cron": "^3.0.11",
    "@vercel/ncc": "^0.38.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "^16.14.15",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "vitest-mock-extended": "^1.3.1",
    "zod-to-json-schema": "^3.22.4",
    "zx": "^7.2.3"
  }
}